@model IEnumerable<Tarefas.Models.CadastroModel>

@{
    ViewData["Title"] = "Index";
}

<h1 >Livros</h1>

<p>
	<a asp-action="Create" role="button" class="btn btn-primary ">Adicionar Livro</a>
</p>

<div class="Text-center">
	<table class="table"id="Tabela-Livro">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Nome)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Informacao)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Autor)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Ano)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Nome)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Informacao)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Autor)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Ano)
					</td>
					<td>
						<a asp-action="Edit" asp-route-id="@item.Id" role="button" class="btn btn-outline-success">Editar</a>
						<a asp-action="Details" asp-route-id="@item.Id" type="button" class="btn btn-outline-warning">Detalhes</a>
						<a asp-action="Delete" asp-route-id="@item.Id" type="button" class="btn btn-outline-danger">Apagar</a>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>

